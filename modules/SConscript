#!/usr/bin/env python
Import('tiBuild')
import os

modules = ['ti.App', 'ti.Window','ti.Network','ti.Filesystem','ti.Media','ti.Desktop','ti.Menu']

if tiBuild.is_osx():
	modules.append('ti.Growl')
#
for module in modules:
	module_dir = tiBuild.dir + '/modules/' + module
	SConscript(module+'/SConscript', build_dir=module_dir, duplicate=0)
	out_dir = os.path.join(tiBuild.dir, 'modules', module)
	script = os.path.join(tiBuild.kroll_build_dir, 'module.py')
	os.system('%s %s %s %s' % (script, tiBuild.dir, out_dir, tiBuild.os))

