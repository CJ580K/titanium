#!/usr/bin/env python
Import('tiBuild')

modules = ['ti.App', 'ti.Window','ti.Network','ti.File','ti.Media','ti.Desktop','ti.Menu', 'ti.Filesystem']

if tiBuild.is_osx():
	modules.append('ti.Growl')
#
for module in modules:
	SConscript(module+'/SConscript', build_dir=tiBuild.dir + '/modules/' + module, duplicate=0)
