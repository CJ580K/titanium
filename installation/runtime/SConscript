#!/usr/bin/env python
Import('build')
import os.path as p

name = 'titanium_runtime'
version = '0.2'
appid ='com.titaniumapp.installer.runtime'

runtime_libs = ['kroll', 'khost']
third_party = ['webkit', 'poco']
module_dirs = [
	'api', 'javascript', 'ruby', 'python', 'ti.Platform',
	'ti.App', 'ti.UI', 'ti.Network', 'ti.Filesystem', 'ti.Media',
	'ti.Desktop', 'ti.Process', 'ti.Notification', 'ti.Growl'
]
modules = {}
for dir in module_dirs:
	 modules[dir.lower().replace('.','')] = dir

manifest_text="""
#appname: %s
#appid: %s
runtime: %s
""" % (name, appid, version)

for m in modules.keys():
	manifest_text += "%s: %s\n" % (m, '0.1')

vars = 'vars build name version runtime_libs '
vars += ' third_party modules appid manifest_text'
if build.is_osx():
	SConscript('SConscript.osx', vars)

if build.is_linux():
	SConscript('SConscript.linux', vars)

if build.is_win32():
	SConscript('SConscript.win32', vars)

