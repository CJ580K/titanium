#!/usr/bin/env python
import os.path as path

Import('build')
csbuilder = Builder(action = 'devenv $SOURCE /rebuild Release')

Env = build.env.Clone(BUILDERS = {'CSProgram': csbuilder})
Env.Append(CPPPATH=[build.kroll_source_dir+'/api'])

p = Env.CSProgram('Installer.exe', 'Installer.sln')
build.require(p)

Env.AddPostAction(p, Copy(
	p.join(build.sdk_build_dir, 'installer', 'Installer.exe')
	build.titanium_source_dir+'/installation/net_installer/win32/bin/Release/Installer.exe'))
